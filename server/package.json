{
  "name": "furyroad",
  "description": "Fury Road - a post-apocalyptic game.",
  "version": "0.1.5",
  "private": true,
  "scripts": {
    "start": "nodemon -x ts-node src/app.ts",
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpileOnly src/app.ts",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "furyroad-interfaces": "^0.1.14",
    "mongoose": "^5.7.1",
    "reflect-metadata": "^0.1.13",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.0",
    "@types/mongoose": "^5.5.18",
    "@types/node": "^12.7.7",
    "@types/uuid": "^3.4.5",
    "eslint": "^6.4.0",
    "prettier": "^1.18.2",
    "ts-node-dev": "^1.0.0-pre.43",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.6.3"
  }
}
